<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:id="@+id/widge0"
    >


    <LinearLayout android:id="@+id/widget4"
        android:layout_width="fill_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="1">



        <LinearLayout android:id="@+id/layout"
            android:layout_width="387dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#0F0F0F"
                android:text="@string/thin" />
            <SeekBar android:id="@+id/seekBar"
                android:layout_width="100dip"
                android:layout_height="10dip"
                android:background="@drawable/bar"/>
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#0F0F0F"
                android:text="@string/thick" />
        </LinearLayout>
        <!-- 修改截止点 -->
        <ImageButton android:id="@+id/buttonclose_ID"
            android:layout_width="20px"
            android:layout_height="20px"
            android:background="@drawable/close"></ImageButton>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:id="@+id/prentwidget"

        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/bg1" />

        <cn.yaheen.online.view.SketchpadView
            android:id="@+id/SketchadView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.52">"</cn.yaheen.online.view.SketchpadView>


        <LinearLayout android:id="@+id/widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">



            <LinearLayout android:id="@+id/widget40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <Button android:id="@+id/buttonsave_ID"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/savex"></Button>

                <Button android:id="@+id/buttonnew_ID"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/newx"></Button>
                <Button android:id="@+id/buttonpen_ID"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/penx"></Button>
                <Button android:id="@+id/buttoneraser_ID"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/eraserx"></Button>

                <Button android:id="@+id/buttonundo_ID"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/undox"></Button>

                <Button android:id="@+id/buttonredo_ID"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/redox"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
