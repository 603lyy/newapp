<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_online"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    tools:context=".activity.OnlineActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/online_bg_2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backhome"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/sptv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="视讯"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <cn.yaheen.online.switchbutton.SwitchButton
                android:id="@+id/sb_default"
                style="@style/SwitchButtonStyle"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical" />

            <TextView
                android:id="@+id/kjtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="课件"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="在线评教系统"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/pagetv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="#FFF" />


            <ImageView
                android:id="@+id/rightbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:src="@drawable/morebg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/contentLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.618"
                android:background="@color/black"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:id="@+id/toolsbar"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/Grey_200"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/kjlist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="课件列表" />

                    <Button
                        android:id="@+id/perwebpage"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="上一页" />

                    <Button
                        android:id="@+id/nextwebpage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="下一页" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Grey_100"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/showview"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <SurfaceView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <WebView
                            android:id="@+id/loadwebview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!--IM START-->
                    <RelativeLayout
                        android:id="@+id/msg_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:padding="1dp">


                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="84dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/layout_bg1">

                            <Button
                                android:id="@+id/btn_send"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="发送" />

                            <EditText
                                android:id="@+id/et_sendmessage"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/btn_send"
                                android:background="@drawable/edittext1"
                                android:singleLine="true"
                                android:textSize="18sp" />
                        </RelativeLayout>

                        <ListView
                            android:id="@+id/msglistview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/relativeLayout"


                            android:layout_marginTop="6dp"
                            android:background="@color/Grey_100"
                            android:cacheColorHint="#00000000"
                            android:divider="@null"
                            android:dividerHeight="5dp"
                            android:scrollbars="none" />


                        <ImageView
                            android:id="@+id/msg_resize"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="78dp"
                            android:src="@drawable/simple_player_icon_fullscreen_stretch_o" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/print"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.382"
                android:background="@drawable/boder">


                <RelativeLayout
                    android:id="@+id/printwidget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:gravity="left"
                    android:orientation="vertical"

                    android:weightSum="1">


                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/widget40"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </LinearLayout>


                    <me.panavtec.drawableview.DrawableView
                        android:id="@+id/paintView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/widget" />


                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/addeasyicon"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:id="@+id/scroller"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/imageView8"
                        android:layout_alignStart="@+id/imageView8"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/hand_point" />

                    <ImageView
                        android:id="@+id/erasers"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/scroller"
                        android:layout_alignStart="@+id/scroller"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/pen_btn" />

                    <ImageView
                        android:id="@+id/color_colour"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/erasers"
                        android:layout_alignStart="@+id/erasers"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/color_colour2" />

                    <ImageView
                        android:id="@+id/cuttool"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/color_colour"
                        android:layout_alignStart="@+id/color_colour"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/cut_o" />

                    <ImageView
                        android:id="@+id/next_page"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/cuttool"
                        android:layout_alignStart="@+id/cuttool"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/nextpage_o" />

                    <ImageView
                        android:id="@+id/pre_page"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/next_page"
                        android:layout_alignStart="@+id/next_page"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/prepage_o" />


                    <ImageView
                        android:id="@+id/canvas_resize"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/simple_player_icon_fullscreen_stretch_o"
                        android:layout_above="@+id/pre_page"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/content_resize"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/simple_player_icon_fullscreen_stretch_o" />

    <ImageView
        android:id="@+id/kj_resize"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/simple_player_icon_fullscreen_stretch_o"
        android:visibility="gone" /><!--simple_player_icon_fullscreen_stretch-->


</RelativeLayout>
