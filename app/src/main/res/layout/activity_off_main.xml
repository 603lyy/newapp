<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/widge0"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@drawable/online_bg">

        <ImageView
            android:id="@+id/backhome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:src="@drawable/back" />
        <TextView
            android:layout_weight="30"

            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="互动评教系统"
            android:gravity="center"
            android:textColor="#FFF" />
        <TextView
            android:layout_weight="2"

            android:id="@+id/pagetv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textColor="#FFF" />

        <ImageView
            android:id="@+id/rightbtn"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:src="@drawable/morebg" />
    </LinearLayout>


    <LinearLayout android:id="@+id/widget4"
        android:layout_width="fill_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="1">



        <!-- <LinearLayout android:id="@+id/layout"
             android:layout_width="387dp"
             android:layout_height="fill_parent"
             android:gravity="center_vertical"
             xmlns:android="http://schemas.android.com/apk/res/android">
             <TextView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="10sp"
                 android:textColor="#0F0F0F"
                 android:text="@string/thin" />
             <SeekBar android:id="@+id/seekBar"
                 android:layout_width="100dip"
                 android:layout_height="10dip"
                 android:background="@drawable/bar"/>
             <TextView android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="10sp"
                 android:textColor="#0F0F0F"
                 android:text="@string/thick" />
         </LinearLayout>-->
         <!-- 修改截止点 -->
        <ImageButton android:id="@+id/buttonclose_ID"
            android:layout_width="20px"
            android:layout_height="20px"
            android:background="@drawable/close"></ImageButton>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/prentwidget"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="horizontal"

        android:weightSum="1">

        <me.panavtec.drawableview.DrawableView
            android:id="@+id/paintView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/scroller"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:src="@drawable/pen_icon"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/buttonnew"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/addeasyicon" />


    </RelativeLayout>
</LinearLayout>
